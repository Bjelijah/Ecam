<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >
    <FrameLayout
	    android:layout_width="fill_parent"
	    android:layout_height="55dip"
	    android:background="@color/title_blue" >
        <ImageButton
            android:id="@+id/ib_flash_light_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@drawable/back_btn_selector"
            android:layout_gravity="left|center" />

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:text="请将手机闪光灯靠近摄像机镜头"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center" />

    <ImageView
        android:id="@+id/iv_flash_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:src="@drawable/flash_background" />
    
    <TextView
        android:id="@+id/tv_flash_light_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/gray"
        android:visibility="invisible"
        android:text="摄像机的指示灯变成红色了吗？变红了即可点击完成" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/ib_flash_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_marginBottom="5dip"
                android:src="@drawable/flash_light_btn_selecor" />

            <TextView
                android:id="@+id/tv_flash_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="设置" />

        </LinearLayout>
        
    </LinearLayout>

    

</LinearLayout>
