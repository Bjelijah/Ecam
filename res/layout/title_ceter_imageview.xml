<FrameLayout android:id="@+id/FrameLayout01"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<TextView android:id="@+id/iv_tv" android:layout_height="55dip"
		android:layout_width="fill_parent" android:background="@color/title_blue"
		android:gravity="center" android:text="@string/QR_code" 	
		android:textColor="@color/title_tv_color"
		android:textSize="23sp"
		></TextView>
	
	<ImageView android:id="@+id/iv_right"
		android:layout_gravity="right|center_vertical"
		android:layout_height="25dip"
		 android:layout_width="20dip"
		  android:paddingLeft="20dip"
		android:paddingRight="20dip"
		 android:layout_marginRight="10dip"
		
		></ImageView>
	<ImageView android:id="@+id/iv_left" 
	    android:src="@drawable/back_btn_selector"
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content"
		android:layout_gravity="center_vertical"
		></ImageView>
</FrameLayout>