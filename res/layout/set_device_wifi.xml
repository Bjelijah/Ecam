<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical" >
    
    <FrameLayout
	    android:layout_width="fill_parent"
	    android:layout_height="55dip"
	    android:background="@color/title_blue" >
        <ImageButton
            android:id="@+id/ib_set_device_wifi_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@drawable/back_btn_selector"
            android:layout_gravity="left|center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFFFF"
        	android:textSize="23sp"
        	android:layout_gravity="center" />
        
        <Button
            android:id="@+id/ib_set_device_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:text="下一步"
            android:background="@drawable/common_button_white"
            android:layout_marginRight="10dip"/>
        
    </FrameLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@drawable/list_item_bg_normal"
         >
        
        <TextView
	        android:layout_width="100dip"
	        android:layout_height="wrap_content"
	        android:textSize="18sp"
	        android:text="摄像机名:"
	        android:textColor="@color/black" />
        <EditText
            android:id="@+id/et_device_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dip"
            android:hint="输入摄像机名称"
            android:textColorHint="@color/light_gray"
            android:background="@null" >
            <requestFocus />
		</EditText>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_bg_normal"
        android:layout_marginTop="10dip"
         >
        
        <TextView
	        android:layout_width="100dip"
	        android:layout_height="wrap_content"
	        android:textSize="18sp"
	        android:text="无线局域网:"
	        android:textColor="@color/black" />

        <!--  <EditText
            android:id="@+id/et_wifi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dip"
            android:background="@null">

        </EditText>-->
        
        <Spinner
	        android:id="@+id/spinner_wifi"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingLeft="10dip"
	        android:gravity="center"
	        android:background="@drawable/dropdown_disabled_holo_dark" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_bg_normal"
         >
        
        <TextView
	        android:layout_width="100dip"
	        android:layout_height="wrap_content"
	        android:textSize="18sp"
	        android:text="密码:"
	        android:textColor="@color/black" />
        <EditText
            android:id="@+id/et_wifi_password"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dip"
            android:hint="输入wifi密码"
            android:textColorHint="@color/light_gray"
            android:background="@null" >
            
		</EditText>

    </LinearLayout>

</LinearLayout>
