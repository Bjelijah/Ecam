<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:background="@android:color/white" />

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:visibility="gone" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/tab_bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/camera_list"
                style="@style/main_tab_bottom"
                android:checked="true"  
                android:layout_marginTop="2.0dip"
                android:drawableTop="@drawable/tab_camera_selector"
               
                android:text="@string/camera_list" />
            <RadioButton
                android:id="@+id/local_files"
                style="@style/main_tab_bottom"
                android:layout_marginTop="2.0dip"
                android:drawableTop="@drawable/tab_files_selector"
                android:text="@string/local_files" />
 <!--  android:background="@drawable/tab_press"-->
            <RadioButton
                android:id="@+id/settings"
                style="@style/main_tab_bottom"
                android:layout_marginTop="2.0dip"
                android:drawableTop="@drawable/tab_set_selector"

                android:text="@string/settings" />
 <!--  android:background="@drawable/tab_press"-->
        </RadioGroup>
    </LinearLayout>

</TabHost>