<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_big_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top" >

	<FrameLayout
	    android:id="@+id/fl_title"
	    android:layout_width="fill_parent"
	    android:layout_height="55dip"
	    android:background="@drawable/tenpay_top_bar" >
        <ImageButton
            android:id="@+id/ib_bigimage_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@drawable/back_btn_selector"
            android:layout_gravity="left|center" />
        <ImageButton
            android:id="@+id/ib_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginRight="10dip"
            android:background="#00000000"
            android:src="@drawable/share_btn_selector" />
    </FrameLayout>
        
	<com.howell.webcam.HackyViewPager
        android:id="@+id/viewPager"  
        android:layout_width="fill_parent"  
        android:layout_height="wrap_content" /> 
        
